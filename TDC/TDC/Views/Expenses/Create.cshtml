@model TDC.Models.Expense





@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3 class="text-center" style="color:#FFFFFF; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Expense</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            <div class="row">
                <div class="col-xs-10 col-xs-push-1">
                    @Html.LabelFor(model => model.product, htmlAttributes: new { @class = "control-label expense-modal" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    @Html.EditorFor(model => model.product, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.product, "", new { @class = "text-danger" })
                </div>
            </div>
            
        </div>

        <div class="form-group text-center">
            <div class="row">
                <div class="col-xs-10 col-xs-push-1">
                    @Html.LabelFor(model => model.cost, htmlAttributes: new { @class = "control-label expense-modal" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    @Html.EditorFor(model => model.cost, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.cost, "", new { @class = "text-danger" })
                </div>
            </div>
            </div>

      
        <div class="modal-footer">
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <input type="submit" value="Add" class="btn btn-danger" />
                </div>
            </div>
        </div>
        </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    $('#myFormSubmit').click(function(e){
      e.preventDefault();
      alert($('#myField').val());
    });
}
