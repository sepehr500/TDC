@model dynamic

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-center red-text" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Expense</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            <div class="row">
                <div class="col-xs-10 col-xs-push-1">
                    <label class="control-label expense-modal red-text" for="recipiant"> Enter Recipiant Email</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    <input type="text" id="recipiant" name="recipiant" class="form-control text-center" />  
                </div>
            </div>

        </div>

        <div class="form-group text-center">
            <div class="row">
                <div class="col-xs-10 col-xs-push-1">
                    <label class="control-label expense-modal red-text" for="recipiant">Enter amount</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    <input type="text" id="amt" name="amt" class="form-control text-center" />   
                </div>
            </div>
        </div>


        <div class="modal-footer">
            <div class="form-group text-center">
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2">
                        <input type="submit" value="Add" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    $('#myFormSubmit').click(function(e){
    e.preventDefault();
    alert($('#myField').val());
    });
}
