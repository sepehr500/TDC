<!-- View Log Modal -->
<div class="modal" id="modalLog" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: #DEDEDE">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 class="text-center" style="color:#A62900; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">History of Events</h3>
                <hr />

            </div>
            <div class="modal-body">
                <table class="table table-bordered table-responsive table-striped box-shadows-rock" style="background-color:#FFFFFF">
                    <thead>
                        <tr>
                            <th width="100px">
                                Date
                            </th>
                            <th width="100px">
                                Type
                            </th>
                            <th width="100px">
                                Amt
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var x in UserActions.getLog(Model.Id))
                        {

                            string classType = "";
                            if (String.Equals(x.getType(), "Income")) { classType = "success"; }
                            else if (String.Equals(x.getType(), "Expense")) { classType = "danger"; }
                            else if (String.Equals(x.getType(), "Expense")) { classType = "danger"; }


                            <tr class=@classType>
                                <td>
                                    @x.getDate().ToString("g")
                                </td>
                                <td>
                                    @x.getType()
                                </td>
                                <td>
                                    @x.getAmt()
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

            </div>*@
        </div>
    </div>
