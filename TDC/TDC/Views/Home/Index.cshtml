@using TDC.Models
@using TDC.Tools
@model TDC.Models.User
@{

    
    ViewBag.Title = "Home Page";
}


<div class="container">
    <!-- Add Expense Modal -->
    

    <!-- Top of Page -->
    <div class="jumbotron" style="text-align: center; background-color:#0094ff;">
        <h1 style="color:#FFFFFF">You have $@Model.getBalance() </h1>
    </div>
    <div class="row">
        <div class="">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-xs-6 col-xs-push-0">
                        <form>                              
                            <a href="#" data-target="#modalExpense" data-toggle="modal" class="btn btn-default btn-lg btn-block btn-danger"><span class="glyphicon glyphicon-plus"></span> Expense</a>
                        </form>
                    </div>
                    <div class="col-xs-6 ">
                        <a href="#" data-target="#modalLog" data-toggle="modal" class="btn btn-default btn-lg btn-block btn-info"><span class="glyphicon glyphicon-th-list"></span> Log</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container">
            <div class="col-xs-12 col-sm-8 col-sm-push-2 col-lg-6 col-lg-push-3">
                <a class="twitter-timeline" href="https://twitter.com/tdchallenge" data-widget-id="544296033954840576">Tweets by @@tdchallenge</a>
                <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalExpense">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm ("create", "Expenses")){
            
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Add Expense</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("~/Views/Expenses/Create.cshtml", new TDC.Models.Expense())

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Add</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- View Log Modal -->
<div class="modal" id="modalLog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th width="100px">
                                Date
                            </th>
                            <th width="100px">
                                Type
                            </th>
                            <th width="100px">
                                Amt
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var x in UserActions.getLog(Model.Id))
                        {
                            
                             string classType = "";
                             if (String.Equals(x.getType(), "Income")) {classType = "success";}
                             else if (String.Equals(x.getType(), "Expense")){classType = "danger";}
                             else if (String.Equals(x.getType(), "Expense")) { classType = "danger"; }
                            

                            <tr class=@classType>
                                <td>
                                    @x.getDate()
                                </td>
                                <td>
                                    @x.getType()
                                </td>
                                <td>
                                    @x.getAmt()
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>







            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
