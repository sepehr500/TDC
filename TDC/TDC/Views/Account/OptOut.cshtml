@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-8 col-xs-push-2">
        <div class="panel box-shadows-rock" style="padding: 10px 10px 10px 10px">
            <h2 class="text-center" style="color:#A62900; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">@ViewBag.Title</h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel box-shadows-rock" style="padding: 10px 10px 10px 10px">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("OptOut", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-group">
                            <div class="row">
                                <div class=" col-xs-12">
                                    <h4 class="text-center full-width">Would you like to opt out of notifications?</h4>
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-xs-2 col-xs-offset-5">
                                    <select name="Opt" class="full-width">
                                        <option value="false">Yes</option>
                                        <option value="true">No</option>
                                    </select>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <div class="row">
                                <div class="col-xs-10 col-xs-offset-1">
                                    <input type="submit" class="btn btn-default full-width" value="Submit" />
                                </div>
                            </div>
                        </div>
                         
                    }
                </div>
            </div>
        </div>
    </div>
</div>
