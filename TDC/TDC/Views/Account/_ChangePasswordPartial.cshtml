@using Microsoft.AspNet.Identity
@model TDC.Models.ManageUserViewModel

@*<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>*@


@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <h4 class="text-center">Change Password Form</h4>
        </div>
    </div>

    <div class="row">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label text-center full-width" })
            </div>
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control full-width" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label text-center full-width" })
            </div>
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control full-width" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label text-center full-width" })
            </div>
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control full-width" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-9 col-sm-push-2">
                <input type="submit" value="Change password" class="btn btn-default full-width" />
            </div>
        </div>
    </div>
}


